from karel.stanfordkarel import *

"""
Karel should fill the whole world with beepers.
"""
def main():
    if front_is_blocked():
        one_column()
    else:
        while front_is_clear() and no_beepers_present():
            fill_odd_row()
            fill_even_row()
       
def one_column():
    put_beeper()
    turn_left()
    check_and_fill()
    come_to_end()

def check_and_fill():
     while front_is_clear():
        move()
        if front_is_clear():
            move()
            put_beeper()

def move_next_row():
    turn_right()
    if front_is_clear():
        move()
        turn_right()
    else:
        come_to_end()

def fill_odd_row():
        put_beeper()
        check_and_fill()
        come_back()
        

def fill_even_row():
        move()
        put_beeper()
        check_and_fill()
        come_back()
    

def come_back():
    turn_around()
    while front_is_clear():
        move()
    move_next_row()

def come_to_end():
    turn_around()
    come_back()
    turn_left()


def safe_move():
    if front_is_clear():
        move()


def turn_around():
    for i in range(2):
        turn_left()


def turn_right():
    for i in range(3):
        turn_left()



# There is no need to edit code beyond this point
if __name__ == '__main__':
    main()
