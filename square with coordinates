
from graphics import Canvas
import time 

CANVAS_WIDTH = 400
CANVAS_HEIGHT = 300
THIS_BIG = 144
CENTER_X = 160
CENTER_Y = 160

def main():
    canvas = Canvas(CANVAS_WIDTH, CANVAS_HEIGHT)
    
    #top left
    left_x=CENTER_X -THIS_BIG/2
    top_y =CENTER_Y - THIS_BIG/2

    #bottom right
    right_x=left_x + THIS_BIG
    bottom_y=top_y + THIS_BIG

    square=canvas.create_rectangle(left_x,top_y,right_x,bottom_y , "blue")

    #shownig the position!!
    show_mouse_position(canvas)

def show_mouse_position(canvas):

    while True:
        x=canvas.get_mouse_x()
        y=canvas.get_mouse_y()

        print(f"x={x},y={y}")
        time.sleep(1/100)
    


# There is no need to edit code beyond this point

if __name__ == '__main__':
    main()
